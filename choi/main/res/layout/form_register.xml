<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FormRegister"
    android:background="@color/black"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Form Register"
            android:textSize="24dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/EditTxtUsername1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtView1"
            android:layout_marginTop="20dp"
            android:hint="Masukkan username"
            android:inputType="text" />

        <EditText
            android:id="@+id/EditTxtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/EditTxtUsername1"
            android:layout_marginTop="20dp"
            android:hint="Masukkan password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/EditTxtPassConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/EditTxtPass"
            android:layout_marginTop="20dp"
            android:hint="Konfirmasi password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/txtLupaPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EditTxtPassConfirm"
            android:layout_alignRight="@+id/EditTxtPassConfirm"
            android:text="Lupa Password"
            android:textStyle="italic" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EditTxtPassConfirm"
            android:layout_marginTop="20dp"
            android:backgroundTint="#e66a35"
            android:text="Daftar"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLoginn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnDaftar"
            android:layout_marginTop="20dp"
            android:backgroundTint="#e66a35"
            android:text="Ke Form Login"
            android:textAllCaps="false" />


    </RelativeLayout>

</RelativeLayout>